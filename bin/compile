#!/usr/bin/env escript
%% -*- erlang -*-
%%! -smp enable -pa ebin -pa priv

-spec main([string()]) -> ok.
main(Paths) ->
  clojerl:start(),
  lists:foreach(fun(X) -> compile_file(X) end, Paths),
  ok.

-spec compile_file(string()) -> term().
compile_file(Path) ->
  PathBin = list_to_binary(Path),
  clj_compiler:compile_file(PathBin, #{verbose => true, time => true}).
